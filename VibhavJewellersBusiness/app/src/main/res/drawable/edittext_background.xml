<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Default state -->
    <item>
        <shape>
            <solid android:color="#FFFFFF"/>
            <corners android:radius="8dp"/>
            <stroke android:width="1dp" android:color="#FEC5BB"/>
            <padding android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="8dp"/>
        </shape>
    </item>

    <!-- Focused state -->
    <item android:state_focused="true">
        <shape>
            <solid android:color="#FFFFFF"/>
            <corners android:radius="8dp"/>
            <stroke android:width="2dp" android:color="#D00000"/> <!-- Darker border when focused -->
            <padding android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="8dp"/>
        </shape>
    </item>

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#F8EDEB"/> <!-- Light background when pressed -->
            <corners android:radius="8dp"/>
            <stroke android:width="2dp" android:color="#D00000"/>
            <padding android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="8dp"/>
        </shape>
    </item>
</selector>